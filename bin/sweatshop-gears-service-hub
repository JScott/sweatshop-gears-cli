#!/usr/bin/env ruby
require 'robot_sweatshop/config'
require 'sweatshop_gears/service_hub'
require 'sinatra'
require 'sinatra/servicehub'
require 'erubis'

configure do
  set :port, ARGV[0] || 34871
  set :bind, configatron.http_bind
end

get '/' do
  eruby = Erubis::Eruby.new frontpage_template
  context = {}
  return eruby.result(context)
end
