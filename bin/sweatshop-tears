#!/usr/bin/env ruby
require 'yaml'
require 'commander/import'
require_relative '../lib/robot_sweatshop/tears'
# require 'robot_sweatshop/tears'

program :name, 'Sweatshop Tears'
program :version, '0.0.1'
program :description, 'Package management for Robot Sweatshop'
program :help, 'Author', 'Justin Scott <jvscott@gmail.com>'

default_command :help

command :init do |c|
  c.syntax = 'sweatshop-tears init'
  c.description = 'Makes the Tears packages available to Robot Sweatshop'
  c.option '--path STRING', String, 'The working path for downloading packages'
  c.action do |args, options|
    options.default :path => '/opt/tears'
    Tears.download to_path: options.path
    Tears.expose_binaries from_path: options.path
  end
end

